<!doctype html>
<html lang="en">
<script>
    function logout() {
        localStorage.removeItem("user");
        window.location.href = "/login";
    }
    if (JSON.parse(localStorage.getItem("user")) === null) {
        window.location.href = "/login"
    } else {
        var user = JSON.parse(localStorage.getItem("user"));
        var currentUrl = window.location.pathname.split("/");
        if (user.result[0].role === "T" && (currentUrl[1] === "student" || currentUrl[1] === "superadmin")) {
            window.location.href = "/teacher"
        } else if (user.result[0].role === "S" && (currentUrl[1] === "superadmin" || currentUrl[1] === "teacher")) {
            window.location.href = "/student/profile"
        } else if (user.result[0].role === "A" && (currentUrl[1] === "student" || currentUrl[1] === "teacher")) {
            window.location.href = "/superadmin/profile"
        }
    }
</script>

